            <intent-filter>
                <action android:name="com.huami.watch.Launcher.BOOT_NOW"/>
            </intent-filter>
        </receiver>
        <activity android:launchMode="singleTask" android:name="com.huami.moblie.watchsettings.actions.bluetooth.DevicePickerActivity">
